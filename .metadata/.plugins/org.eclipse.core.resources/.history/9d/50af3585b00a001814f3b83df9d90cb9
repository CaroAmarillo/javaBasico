package com.Ejercicio1.Formulario.Controller;

import java.util.ArrayList;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;
import com.Ejercicio1.Formulario.Model.Empleado;

@Controller
public class MainController {
	
	private ArrayList<Empleado> listaDeEmpleados = new ArrayList<>();
	
	@RequestMapping(value= "/index",
			method = RequestMethod.GET)
	public ModelAndView homeGet(){
		
		ModelAndView model = new ModelAndView();
		Empleado empleado = new Empleado();
		
		model.addObject("empleado", empleado);
		model.setViewName("index");
		
		return model;
	}
	
	@RequestMapping(value="/index",
			method = RequestMethod.POST)
	public ModelAndView homePost(@ModelAttribute Empleado empleado){
		
		ModelAndView model = new ModelAndView();
		listaDeEmpleados.add(empleado);
		
		model.addObject("listaDeEmpleados", listaDeEmpleados);
		model.setViewName("listado");
		
		return model;
		
	}
	
	@RequestMapping(value = "/detalle",
			method = RequestMethod.GET)
	public ModelAndView verDetalles(
			@RequestParam("id") String nombre){
		
		ModelAndView model = new ModelAndView();
		
		for(Empleado empleado : listaDeEmpleados) {
			
			if(empleado.getNombre().equals(nombre)) {
				model.addObject("empleado", empleado);				
			}
		}
		
		model.setViewName("detalle");
		return model;
				
	}
	
	
	

}

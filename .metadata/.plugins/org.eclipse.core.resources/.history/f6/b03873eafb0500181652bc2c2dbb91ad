package com.ejercicioExtra;

public class Empleado {
	private String nombre;
	private int sueldo;
	
	public Empleado(){
		nombre = "Pepe";
		sueldo = 2134;
		
	}
	
	public void mostrarDatos(){
		System.out.println("Nombre: " + nombre + ", Sueldo: " + sueldo);		
	}
	
	public void pagarImpuestos(int impuestos) {
		if(sueldo > 3000){
			sueldo += impuestos;						
		}
	}
	
}
